<nav class="Navigation"{{extraAttributes}}>
    {{#with label}}
        <div class="Navigation-label">{{this}}</div>
    {{/with}}
    {{#with items}}
        <ul class="Navigation-items">
            {{#each this}}
                <li class="Navigation-items-item" {{#if this.isCurrent}}data-current-nav-item{{/if}}>{{this}}</li>
            {{/each}}
        </ul>
    {{/with}}
</nav>
