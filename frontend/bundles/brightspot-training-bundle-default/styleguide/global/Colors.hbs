:root {
  {{#with primaryColor}}--color-primary-theme: {{this}};{{/with}}
  {{#with secondaryColor}}--color-secondary-theme: {{this}};{{/with}}

  {{#with primaryTextColor}}--color-primary-text-theme: {{this}};{{/with}}
  {{#with primaryTextColorInverse}}--color-primary-text-inverse-theme: {{this}};{{/with}}
  {{#with secondaryTextColor}}--color-secondary-text-theme: {{this}};{{/with}}
  {{#with secondaryTextColorInverse}}--color-secondary-text-inverse-theme: {{this}};{{/with}}
  {{#with tertiaryTextColor}}--color-tertiary-text-theme: {{this}};{{/with}}
  {{#with tertiaryTextColorInverse}}--color-tertiary-text-inverse-theme: {{this}};{{/with}}
  {{#with siteBgColor}}--color-site-bg-theme: {{this}};{{/with}}
  {{#with borderColor}}--color-border-theme: {{this}};{{/with}}

  {{#with headerBgColor}}--color-header-bg-theme: {{this}};{{/with}}
  {{#with headerSecondaryBgColor}}--color-header-secondary-bg-theme: {{this}};{{/with}}
  {{#with headerTextColor}}--color-header-text-theme: {{this}};{{/with}}
  {{#with headerBorderColor}}--color-header-border-theme: {{this}};{{/with}}

  {{#with hatBgColor}}--color-hat-bg-theme: {{this}};{{/with}}
  {{#with hatTextColor}}--color-hat-text-theme: {{this}};{{/with}}

  {{#with footerBgColor}}--color-footer-bg-theme: {{this}};{{/with}}
  {{#with footerTextColor}}--color-footer-text-theme: {{this}};{{/with}}

  {{#with BannerBgColor}}--color-banner-bg-theme: {{this}};{{/with}}
  {{#with BannerTextColor}}--color-banner-text-theme: {{this}};{{/with}}

  {{#with linkTextColor}}--color-link-text-theme: {{this}};{{/with}}
  {{#with linkHoverColor}}--color-link-text-hover-theme: {{this}};{{/with}}

  {{#with buttonBgColor}}--color-button-bg-theme: {{this}};{{/with}}
  {{#with buttonBorderColor}}--color-button-border-theme: {{this}};{{/with}}
  {{#with buttonTextColor}}--color-button-text-theme: {{this}};{{/with}}
  {{#with buttonHoverBgColor}}--color-button-hover-bg-theme: {{this}};{{/with}}
  {{#with buttonHoverBorderColor}}--color-button-hover-border-theme: {{this}};{{/with}}
  {{#with buttonHoverTextColor}}--color-button-hover-text-theme: {{this}};{{/with}}

  {{#with listTitleColor}}--color-list-title-theme: {{this}};{{/with}}
  {{#with listBorderColor}}--color-list-border-theme: {{this}};{{/with}}
  {{#with categoryTextColor}}--color-category-text-theme: {{this}};{{/with}}

  --color-gray: #dddddd;
  --color-dark-gray: #333333;
}
