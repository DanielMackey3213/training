{{#if items}}
<div class="PageListW" data-module{{include "includes/PageList-attributes.hbs" this}}>
    {{#if title}}
        {{include "includes/PageList-header.hbs" this}}
    {{/if}}

    <div class="PageListW-items">
        <div class="PageListW-items-row">
            <div class="PageListW-items-column" data-with-borders>
                {{#each items}}
                    <div class="PageListW-items-item">
                        {{#eq this._template "/page/promo/PagePromo.hbs"}}
                            {{include "/link/Link.hbs" this href=url body=title}}
                        {{else}}
                            {{render this}}
                        {{/eq}}
                    </div>
                {{/each}}
            </div>
        </div>
    </div>

    {{include "includes/PageList-footer.hbs" this}}
</div>
{{/if}}
