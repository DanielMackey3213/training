{{#if items}}
<bsp-list-loadmore class="PageListN" data-module{{include "includes/PageList-attributes.hbs" this}}>
    {{include "includes/PageList-header.hbs" this}}

    {{#with items}}
        <div class="PageListN-items" data-with-borders data-list-loadmore-items>
        {{#each this}}
            <div class="PageListN-items-item">
                {{#eq this._template "/page/promo/PagePromo.hbs"}}
                    {{include "/page/promo/PagePromoA.hbs" this description=null}}
                {{else}}
                    {{render this}}
                {{/eq}}
            </div>
        {{/each}}
        </div>
    {{/with}}

    {{include "includes/PageList-footer.hbs" this}}
</bsp-list-loadmore>
{{/if}}
