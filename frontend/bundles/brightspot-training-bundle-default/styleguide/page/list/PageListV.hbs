{{#if items}}
<div class="PageListV" data-module{{include "includes/PageList-attributes.hbs" this}}>
    {{include "includes/PageList-header.hbs" this}}

    <div class="PageListV-items">
        <div class="PageListV-items-row">
            <div class="PageListV-items-item">
                {{#with items.[0]}}
                    {{#eq this._template "/page/promo/PagePromo.hbs"}}
                        {{include "/page/promo/PagePromoModuleC.hbs" this imagePositionVertical="top"}}
                    {{else}}
                        {{render this}}
                    {{/eq}}
                {{/with}}
            </div>
        </div>
        <div class="PageListV-items-row" data-with-borders>
            {{#each items}}
                {{#if (gt @index 0)}}
                    {{#if (lt @index 5)}}
                        <div class="PageListV-items-item">
                            {{#eq this._template "/page/promo/PagePromo.hbs"}}
                                {{include "/page/promo/PagePromoB.hbs" this media=null description=null}}
                            {{else}}
                                {{render this}}
                            {{/eq}}
                        </div>
                    {{/if}}
                {{/if}}
            {{/each}}
        </div>
    </div>

    {{include "includes/PageList-footer.hbs" this}}
</div>
{{/if}}
