{{#if items}}
<div class="PageListT" data-module data-width="full"{{include "includes/PageList-attributes.hbs" this}}>
    {{#with items.[0]}}
        {{#eq this._template "/page/promo/PagePromo.hbs"}}
            {{include "/page/promo/PagePromoModuleB.hbs" this}}
        {{else}}
            {{render this}}
        {{/eq}}
    {{/with}}
    <div class="PageListT-items">
        {{#each items}}
            {{#if (gt @index 0)}}
                {{#if (lt @index 5)}}
                    <div class="PageListT-items-item">
                        {{#eq this._template "/page/promo/PagePromo.hbs"}}
                            {{include "/page/promo/PagePromoB.hbs" this imagePositionVertical="top" description=null}}
                        {{else}}
                            {{render this}}
                        {{/eq}}
                    </div>
                {{/if}}
            {{/if}}
        {{/each}}
    </div>
</div>
{{/if}}
