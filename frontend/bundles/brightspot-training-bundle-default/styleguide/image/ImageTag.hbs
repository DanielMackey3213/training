{{#resize image (fallback (get "imageSize") "large")}}
    <img class="Image" alt="{{../alt}}"
        {{~#with srcset}} srcset="{{this}}"{{/with~}}
        {{~#with width}} width="{{this}}"{{/with~}}
        {{~#with height}} height="{{this}}"{{/with~}}
        {{~#if (get "tabIndex")}} tabindex="0"{{/if}}
        {{~#if (get "rolePresentation")}} role="presentation"{{/if}}
        {{~#eq (get "lazyLoad") false}}
        src="{{src}}"
        {{~else}}
        data-src="{{src}}" data-lazy-load="true" src="{{svgPlaceholder width height}}"
        {{/eq~}}
    >
{{/resize}}
