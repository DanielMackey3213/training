{{#resize image (fallback (get "imageSize") "large")}}
    <amp-img class="Image" alt="{{../alt}}" src="{{src}}"
        {{~#with srcset}} srcset="{{this}}"{{/with~}}
        width="{{~#with width}}{{this}}{{/with~}}"
        height="{{~#with height}}{{this}}{{/with~}}"
             layout="responsive"></amp-img>
{{/resize}}
